extends ../layout

block content

  div(id='MENU')
    button(class='' id='MENU_PLAY')
      img(src='./assets/play.svg' class='menuimg' id='MENU_PLAY_IMG')
    button(class='' id='MENU_HIDE')
      img(src='./assets/hide.svg' class='menuimg')
    button(class='' id='MENU_LIST')
      img(src='./assets/list.svg' class='menuimg')
    button(class='' id='MENU_TAGS') Tags
    input(class='' type='search' id='SEARCH' placeholder='Tags...')
    button(class='' id='MENU_GET')
      img(src='./assets/search.svg' class='menuimg')
    button(class='' id='MENU_MODE') Mode
    button(class='' id='MENU_CLEAR')
      img(src='./assets/clear.svg' class='menuimg')

  div(id='MENU2')
      button(class='seethrough' id='MENU_MIN') &lt;
      button(class='tohide' id='MENU_HIDE2')
        img(src='./assets/hide.svg' class='menuimg')
      button(class='tohide' id='MENU_NEXT')
        img(src='./assets/next.svg' class='menuimg')
      button(class='tohide' id='MENU_LOOP')
        img(src='./assets/repeat.svg' class='menuimg')
      button(class='tohide' id='MENU_RANDOM')
        img(src='./assets/shuffle.svg' class='menuimg')
      button(class='tohide' id='MENU_MUTE')
        img(src='./assets/mute.svg' class='menuimg')
      button(class='tohide' id='MENU_FULL')
        img(src='./assets/full.svg' class='menuimg')
      button(class='tohide' id='MENU_LIST2')
        img(src='./assets/list.svg' class='menuimg')
      input(class='tohide' type='number' id='MENU_TIMER' value=5)
      p(class='tohide' id='MENU_NAME')

  form(class='edit' id='EDIT_SCREEN' action='/edit' method='POST')
    div(id='EDIT_HOLDER')
    div(id='EDIT_CONTROLS')
      button(id='EDIT_LAST' type='button') &lt;
      button(id='EDIT_ADD' type='button') +
      button(id='EDIT_NEXT' type='button') &gt;
    input(class='' id='EDIT_ID' name="EDIT_ID" type='text' value='' readonly)
    input(class='' id='EDIT_FILE' type='text' value='' readonly)
    input(class='' id='EDIT_NAME' name="EDIT_NAME" type='text' value='')
    input(class='' id='EDIT_TAGS' name="EDIT_TAGS" type='text' value='')
    input(class='' id='EDIT_SUBMIT' type='submit')
    button(class='' id='EDIT_CLOSE' type='button') Close

  div(class='' id='TAG_LIST')
    - if(tags)
      each tag in tags
        div(class='tagD')
          button(class='tagB tagRemove' data-tag=tag) -
          p(class='tagP') #{tag}
          button(class='tagB tagAdd' data-tag=tag) +

  div(class='' id='PLAY_LIST')

  div(class='' id='PLAY_WINDOW')

  div(class='' id='REFERENCES')

    - if(references)

      each ref in references
        div(class='item' id=ref.id+'item' data-id=ref.id data-displayName=ref.displayName)
          div(class='control')
            div(class='controlT')
              p(class='name' id=ref.id+'name' data-id=ref.id data-fileLocation=ref.fileLocation data-fileType=ref.fileType data-displayName=ref.displayName data-tags=ref.tags) #{ref.displayName}
              div(class='buttonDiv')
                button(class='button' data-id=ref.id id=ref.id+'button') +
            div(class='controlB')
              p(class='tag' id=ref.id+'tag') #{ref.tags}

    - else

      li(class='') No references found.